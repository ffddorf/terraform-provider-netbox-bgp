{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended"],
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["\\.github/workflows/.+\\.ya?ml"],
      matchStrings: [
        '# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+\\S+_version:\\s*(-\\s+)?"(?<currentValue>\\S+)"',
      ],
    },
    {
      customType: "regex",
      managerFilePatterns: ["docker-compose\\.ya?ml"],
      matchStrings: [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+\\S+_VERSION:\\s*(\\$\\{.+_VERSION:-)?(?<currentValue>[^\\s}]+)\\}?",
      ],
    },
  ],
}
